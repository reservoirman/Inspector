<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="org.tsg.inspector.AppCommand"/>
			<optional-completers>
		 		<entry key="-sip" value-ref="IpCompleter"/>
		 		<entry key="-dip" value-ref="IpCompleter"/>
		 		<entry key="-dmac" value-ref="MacCompleter"/>
		 		<entry key="-smac" value-ref="MacCompleter"/>
		 		<entry key="-sport" value-ref="PortCompleter"/>
		 		<entry key="-dport" value-ref="PortCompleter"/>
		 		<entry key="-ethtype" value-ref="EtherTypeCompleter"/>
		 		<entry key="-protocol" value-ref="ProtocolCompleter"/>
            </optional-completers>
		</command>
		<command>
			<action class="org.tsg.inspector.CommandClear"/>	
		</command>
    </command-bundle>
    <bean id="IpCompleter" class="org.tsg.inspector.IPAddressCompleter"/>
    <bean id="MacCompleter" class="org.tsg.inspector.MACAddressCompleter"/>
    <bean id="PortCompleter" class="org.tsg.inspector.PortCompleter"/>
    <bean id="EtherTypeCompleter" class="org.tsg.inspector.EtherTypeCompleter"/>
    <bean id="ProtocolCompleter" class="org.tsg.inspector.ProtocolCompleter"/>
</blueprint>
